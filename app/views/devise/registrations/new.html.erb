<table>
  <th><h2>Sign up</h2></th>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <tr><td><%= f.label :first_name %></td>
      <td><%= f.text_field :first_name %></td></tr>

 <tr><td><%= f.label :last_name %></td>
  <td><%= f.text_field :last_name %></td></tr>

<tr><td><%= f.label :house_no %></td>
  <td><%= text_field_tag "student[s_address][house_no]"%></td></tr>

<tr><td><%= f.label :street %></td>
  <td><%= text_field_tag "student[s_address][street]" %></td></tr>

<tr><td><%= f.label :city %></td>
  <td><%= text_field_tag "student[s_address][city]" %></td></tr>



 <tr><td><%= f.label :zipcode %></td>
  <td><%= text_field_tag "student[s_address][zipcode]" %></td></tr>




 <tr><td> <%= f.label :email %></td>
  <td><%= f.email_field :email %></td></tr>

 <tr><td> <%= f.label :password %></td>
 <td> <%= f.password_field :password %></td></tr>

  <tr><td><%= f.label :password_confirmation %></td>
  <td><%= f.password_field :password_confirmation %></td></tr>

  <tr><td><%= f.label :course %></td>
  <td><%=select_tag "student[course]", options_from_collection_for_select(Course.all, :id, :name), :multiple=>true%></td></tr>

<tr><td><%= f.label :time_slot%></td>
  <td><%=select_tag "student[time_slot]", options_from_collection_for_select(Timeslot.all, :id, :info),:multiple=>true%></td></tr>

  <tr><td><%= f.submit "Sign up" %></td></tr>
<% end %>

</table>
<%= render :partial => "devise/shared/links" %>
